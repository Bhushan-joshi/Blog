<%- include('../includes/head'); %>
<link rel="stylesheet" href="/static/create.css">
</head>

<body>
    <%- include('../includes/navbar'); %>
    <main class="main-header">
        <h2 class="header">Update Post</h2>
        <hr>
        <form action="/update" method="post" class="form-controll">
            <input type="hidden" name="pid" value="<%= post._id %>">
            <div class="form__fild">
                <label class="form__label" for="title">Title:</label>
                <input class="form__input" type="text" name="title" id="title" value="<%=post.title%>">
            </div>
            <div class="form__fild">
                <label class="form__label" for="content">Content</label>
                <textarea class="form__input" name="content" id="content" rows="10">
                    <%= post.content %> 
                </textarea>
                <button class="btn" type="submit"><strong>Update <i class="ml-2 fas fa-pen-nib"></i> </strong></button>
        </form>
    </main>

    <%- include('../includes/end'); %>